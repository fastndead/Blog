@model IEnumerable<Entities.User>

<link href="@Url.Content("~/Content/Home.css")" rel="stylesheet" type="text/css" />
@if (Model.Count() == 0)
{
    <div class="card">
        <div class="card-header"></div>
        <h1 class="card-title" style="text-align: center">
            You have no subscriptions yet
        </h1>
        <div class="card-body">
        </div>
    </div>
}else{
    
    foreach (var user in Model)
    {
        <div class="card">
            <div class="card-header"></div>
            <h1 class="card-title">
                <a href="/User/User?id=@user.Id">
                    @user.Name 
                </a>
            </h1>
            <div class="card-body">
                Has @user.Posts.Count() posts.
            </div>
        </div>
    }
}
